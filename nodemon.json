{
  "verbose": true,
  "exec": "babel-node src --out-dir dist --source-maps --verbose --watch",
  "ignore": ["*.test.js", "fixtures/*"],
  "watch": ["dist/**"],
  "signal": "SIGHUP",
  "ext": "js",
  "events": {
    "restart": "kill-port 4000",
    "crash": "kill-port 4000"
  },
  "delay": "2500"
}
