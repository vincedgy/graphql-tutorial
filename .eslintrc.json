{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "plugins": [
      "eslint-plugin-graphql"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "rules": {
      "max-len": [1, 120, 2, {"ignoreComments": true}]
    }
}
